<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="CategoryCraftFragmentBinding"
            type="com.abdalkarimalbiekdev.herafi.viewModel.CategoryCraftFragmentViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Fragment.Crafts.CraftFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?background_layout"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/craftCategory_fragment_title"
                android:background="?background_layout"
                android:textColor="@color/primary_color"
                android:layout_margin="4dp"
                android:textSize="36sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?text_title"
                android:background="?background_layout"
                android:text="@string/craftCategory_fragment_subtitle"
                android:layout_margin="12dp"
                android:textSize="26sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCraftCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?background_layout"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>
<!--                app:setAdapterCategpryCraftFragment='@{"Add adapter CategpryCraft"}'/>-->

        </LinearLayout>

    </FrameLayout>
</layout>